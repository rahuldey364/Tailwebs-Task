<!-- include header -->
<%- include('includes/_header.ejs') %>
<!-- /include header -->

<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/user"><i class="fas fa-angle-double-left"></i> All Users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update Student</h2>
            <span class="text-light">Use the below form to update a student info</span>
        </div>
    </div>
    <form method="PUT" id="update_student">
        <div class="new_student">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <input type="hidden" name="id" value="<%= students._id %>">
                <input type="text" name="name" value="<%= students.name %>" placeholder="Mark Stoenis">
            </div>
            <div class="form-group">
                <label for="subject" class="text-light">Subject</label>
                <input type="text" name="subject" value="<%= students.subject %>" placeholder="Math">
            </div>
            <div class="form-group">
                <label for="marks" class="text-light">Marks</label>
                <input type="text" name="marks" value="<%= students.marks %>" placeholder="90">
            </div>
    
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Save</button>
            </div>
    
        </div>
    </form>
    
</main>

<!-- include footer -->
<%- include('includes/_footer') %>
<!-- /include footer -->