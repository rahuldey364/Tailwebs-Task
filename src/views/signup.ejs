<!-- include header -->
<%- include('includes/_header.ejs') %>
<!-- /include header -->

<main id="site-main">
    <div class="container">
        <div class="form-title text-center">
            <h2 class="text-dark">SignUp</h2>
            <span class="text-light">Use the below form to Signup</span>
        </div>
    </div>
    <form action="/add-user" method="POST" id="signup">
        <div class="new_student">
            <div class="form-group">
                <label for="name" class="text-light">Name</label>
                <!-- <input type="hidden" name="id" value=""> -->
                <input type="text" name="name" value="" placeholder="mark">
            </div>
            <div class="form-group">
                <label for="email" class="text-light">Email</label>
                <!-- <input type="hidden" name="id" value=""> -->
                <input type="text" name="email" value="" placeholder="xyz@gmail.com">
            </div>
            <div class="form-group">
                <label for="password" class="text-light">Password</label>
                <input type="password" name="password" value="" placeholder="abcd123">
            </div>
            <div class="form-group">
                <label for="repassword" class="text-light">Re Enter Password</label>
                <input type="password" name="repassword" value="" placeholder="abcd123">
            </div>
    
            <div class="form-group">
                <button type="submit" class="btn text-dark update">Register</button>
            </div>
    
        </div>
    </form>
    <h3 class="text-center">or</h3>
    <form action="/" method="GET" id="signup">
        <div class="new_student">
            <div class="form-group">
                <button type="submit" class="btn text-dark update">login</button>
            </div>
    
        </div>
    </form>
</main>

